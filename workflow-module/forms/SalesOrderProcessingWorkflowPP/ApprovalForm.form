{
    "id": "approvalform",
    "schemaVersion": "1.1.0",
    "name": "ApprovalForm",
    "revision": "1.0",
    "type": "task",
    "readOnly": false,
    "content": [
        {
            "id": "requestoverview",
            "type": "section",
            "title": "RequestOverview",
            "content": [
                {
                    "id": "shiptoparty",
                    "type": "string",
                    "label": "ShipToParty",
                    "readOnly": true,
                    "value": "${context.salesOrderDetails.shipToParty}",
                    "constraints": {
                        "required": false
                    }
                },
                {
                    "id": "salesorganisation",
                    "type": "string",
                    "label": "SalesOrganisation",
                    "readOnly": true,
                    "value": "${context.salesOrderDetails.salesOrganisation}",
                    "constraints": {
                        "required": false
                    }
                },
                {
                    "id": "orderamount",
                    "type": "integer",
                    "label": "OrderAmount",
                    "readOnly": true,
                    "value": "${context.salesOrderDetails.orderAmount}",
                    "constraints": {
                        "required": false
                    }
                }
            ]
        },
        {
            "id": "decisioncomment",
            "type": "section",
            "title": "DecisionComment",
            "content": [
                {
                    "id": "comment",
                    "type": "string",
                    "label": "Comment",
                    "readOnly": false,
                    "value": "${context.comment}",
                    "constraints": {
                        "required": false
                    }
                }
            ]
        }
    ],
    "decisions": [
        {
            "id": "approve",
            "text": "Approve",
            "decisionType": "positive"
        },
        {
            "id": "decline",
            "text": "Decline",
            "decisionType": "negative"
        }
    ]
}